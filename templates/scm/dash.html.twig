{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
{% set nom = "" %}
{% set id = 0 %}
{% set total = 0 %}
{% set montant = 0 %}
{% set charges = 0 %}
{% set type = "" %}
{% for scm in scms  %}
    {% set nom = scm.nom %}
    {% set id = scm.id %}
    {% set charges = scm.charges  %}
{% endfor %}
<div class="card text-center">
    <div class="card-header">
        <h1>
            tableau de bord (admin): {{nom}}
        </h1>
    </div>
    <div class="card-body">
      <div class="row">
          <div class="">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Charges</h5>
                
                <table id="table_id" class="table table-striped table-bordered">
                  <thead>
                      <tr>
                          <th>Dénomination</th>
                          <th>type</th>
                          <th>Montant</th>
                          <th>Date</th>
                          <th>Echéance</th>
                          <th>payé le</th>
                      </tr>
                  </thead>
                  <tbody>                 
                    {% for charge in charges  %}
                          <tr>
                              <td>{{charge.nom}}</td>
                              {% if charge.type == 1 %}
                                {% set type = "variable" %}
                              {% else %}
                                {% set type = "fixe"  %}
                              {% endif %}
                              <td>{{type}}</td>
                              <td>{{charge.montant}} €</td>
                              {% set total = total + charge.montant %}
                              <td>{{charge.createdAt | date("d/m/Y")}}</td>
                              <td>{{charge.paymentAt | date("d/m/Y")}}</td>
                              <td>{{charge.payedAt | date("d/m/Y")}}</td>
                          </tr>                    
                    {% endfor %}
                  </tbody>
              </table>
              <p>total des charges : {{total}} €</p>

                <a href="{{path('charges', { id : id })}}" class="btn btn-primary">Ajouter une charge</a>
              </div>
            </div>
          </div>
          <div class="col-sm-5">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Membres</h5>
                {# {{dump(users)}} #}
                  <table id="table_user" class="table table-striped table-bordered">
                  <thead>
                      <tr>
                          <th>Nom</th>
                          <th>Nombres de part</th>
                          <th>Montant charges</th>
                      </tr>
                  </thead>
                  <tbody>                 
                    {% for user in users  %}
                          <tr>
                              <td>{{user.username}}</td>
                              <td>{{user.nbPart}}</td>
                              {% set montant = (total * user.nbPart)/ 100 %}
                              <td>{{montant}} €</td>
                          </tr>                    
                    {% endfor %}
                  </tbody>
                </table>
                <a href="{{path('app_register', { id : id })}}" class="btn btn-primary">Ajouter un membre</a>
              </div>
            </div>
          </div>
        </div>
    </div>
    <div class="card-footer text-muted">
        {{ "now"|date("d/m/Y") }}
    </div>
  </div>


{% endblock %}